<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hss.quickpools"
    android:versionCode="6"
    android:versionName="1.0.6">

<uses-feature android:name="android.hardware.screen.portrait" />

    <uses-sdk android:minSdkVersion="11" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/twosharpswords"
        android:screenOrientation="portrait"
        android:configChanges="keyboardHidden"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NewPool"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity android:name=".Notepad" />
        <activity android:name=".FencerList" />
        <activity
            android:name=".NewFencer"
            android:screenOrientation="portrait" />
        <activity android:name=".ShowCard" />
        <activity android:name=".NoteEdit" />
        <activity android:name=".ViewFencerStats" />
        <activity android:name=".FencerCheckboxList" />
        <activity android:name=".EventClassChart" />
        <activity
            android:name=".PoolSheet"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TableofSixteen"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".TableofFour"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".TableofEight"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".TableofTwo"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".FinalResults"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".PoolResults"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        />
        <activity
            android:name=".BoutSheet"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity android:name=".PastBouts" />
        <activity
            android:name=".ReorderList"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".SelectCertainFencer"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden" />
        <activity
            android:name=".CoinFlip"
            android:screenOrientation="sensorLandscape"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
